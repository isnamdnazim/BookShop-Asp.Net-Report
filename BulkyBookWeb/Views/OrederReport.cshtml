<body>
    @{
        <div class="order-header">

           <div class="text-center" style="text-align:center;"><h4 class="text-center">Order Report   From : @Model.From.ToShortDateString() To: @Model.To.ToShortDateString()</h4></div>
            @foreach (var orderVM in Model.OrderHeaders)
            {
                <div class="order-item">
                    <p style="display:inline-block">Order ID: @orderVM.Id, </p>
                    <p style="display:inline-block">Name: @orderVM.Name, </p>
                    <p style="display:inline-block">Phone: @orderVM.PhoneNumber, </p>
                   
                    <p style="display:inline-block">Total: @orderVM.OrderTotal, </p>
                    <p style="display:inline-block">Order Date: @orderVM.OrderDate.ToShortDateString(), </p>
                    <p style="display:inline-block">Payment Status: @orderVM.PaymentStatus, </p>
                    <p style="display:inline-block">Payment Date: @orderVM.PaymentDate.ToShortDateString()</p>
                    <!-- Display other OrderHeader properties -->
                </div>

                <!-- OrderDetails Table -->
                <table class="order-details-table">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Authos</th>
                            <th>ISBN</th>
                            <th>Qty</th>
                          
                            <!-- Add other OrderDetail properties as needed -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderDetail in orderVM.OrderDetails)
                        {
                            <tr>
                                <td>@Html.Raw(orderDetail.Product.Description)</td>
                                <td>@orderDetail.Price</td>
                                <td>@orderDetail.Product.Author</td>

                                <td>@orderDetail.Product.ISBN</td>
                                <td>@orderDetail.Count</td>
                              
                                <!-- Display other OrderDetail properties -->
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Add space between OrderHeader items and OrderDetails tables -->
                <div class="order-spacing"></div>
            }
        </div>
    }

